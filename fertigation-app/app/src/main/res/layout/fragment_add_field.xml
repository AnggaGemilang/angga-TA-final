<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/design_bottom_sheet"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="22dp"
            android:orientation="vertical" >

            <androidx.cardview.widget.CardView
                android:layout_width="70dp"
                android:layout_height="5dp"
                android:layout_marginTop="20dp"
                android:layout_gravity="center"
                app:cardElevation="0dp"
                app:cardBackgroundColor="@color/green_75"
                app:cardCornerRadius="50dp" />

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="5dp"
                android:text="Add Field"
                android:textSize="25sp"
                android:layout_gravity="center"
                android:textStyle="bold" />

            <LinearLayout
                android:id="@+id/configuration_item_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginEnd="7dp"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/title_field_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Field Name"
                        android:textStyle="bold"
                        android:layout_marginTop="15dp"
                        android:textSize="14sp" />

                    <EditText
                        android:id="@+id/field_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="7dp"
                        android:textSize="16sp"
                        android:background="@drawable/edittext_style"
                        android:hint="Enter Name" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="7dp"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/title_field_address"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Address"
                        android:textStyle="bold"
                        android:layout_marginTop="15dp"
                        android:textSize="14sp" />

                    <EditText
                        android:id="@+id/field_address"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="7dp"
                        android:textSize="16sp"
                        android:background="@drawable/edittext_style"
                        android:hint="Enter Address" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/configuration_item_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginEnd="7dp"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/title_field_area"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Land Area (hA)"
                        android:textStyle="bold"
                        android:layout_marginTop="15dp"
                        android:textSize="14sp" />

                    <EditText
                        android:id="@+id/field_area"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="7dp"
                        android:textSize="16sp"
                        android:background="@drawable/edittext_style"
                        android:inputType="phone"
                        android:digits="0123456789"
                        android:maxLength="2"
                        android:hint="Enter Land Area" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="7dp"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/title_number_of_monitor_device"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Monitor Devices"
                        android:textStyle="bold"
                        android:inputType="number"
                        android:layout_marginTop="15dp"
                        android:textSize="14sp" />

                    <EditText
                        android:id="@+id/number_of_monitor_device"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="7dp"
                        android:textSize="16sp"
                        android:inputType="phone"
                        android:digits="0123456789"
                        android:maxLength="2"
                        android:background="@drawable/edittext_style"
                        android:hint="Enter The Number" />

                </LinearLayout>

            </LinearLayout>

            <TextView
                android:id="@+id/title_sync_hardware"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sync Hardware"
                android:textStyle="bold"
                android:layout_marginTop="15dp"
                android:textSize="14sp" />

            <androidx.cardview.widget.CardView
                android:id="@+id/sync_hardware"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                app:cardElevation="0dp"
                app:cardCornerRadius="8dp"
                android:backgroundTint="#32C4C4C4">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/open"
                        android:layout_width="wrap_content"
                        android:layout_height="35dp"
                        android:layout_marginVertical="15dp"
                        android:layout_marginStart="15dp"
                        android:paddingHorizontal="20dp"
                        android:paddingTop="3dp"
                        android:textColor="@color/black"
                        android:background="@color/grey_20"
                        android:text="Open Scanner"  />

                    <TextView
                        android:id="@+id/txt_filename"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="10dp"
                        android:text="Scan QR Code" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        <LinearLayout
            android:id="@+id/configuration_item_3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="7dp"
                android:orientation="vertical" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Choose Preset"
                    android:textStyle="bold"
                    android:layout_marginTop="15dp"
                    android:textSize="14sp" />

                <Spinner
                    android:id="@+id/preset_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="7dp"
                    app:popupTheme="@style/Spinner.Custom"
                    android:background="@drawable/spinner_style" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="7dp"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/title_initial_plant_age"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Initial Plant Age"
                    android:textStyle="bold"
                    android:layout_marginTop="15dp"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/initial_plant_age"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="7dp"
                    android:textSize="16sp"
                    android:inputType="phone"
                    android:digits="0123456789"
                    android:maxLength="2"
                    android:background="@drawable/edittext_style"
                    android:hint="Enter Age" />

            </LinearLayout>

        </LinearLayout>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_submit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="22dp"
                android:paddingHorizontal="75dp"
                android:layout_marginBottom="25dp"
                android:textColor="@color/white"
                android:background="@drawable/button_submit"
                android:drawableLeft="@drawable/ic_baseline_library_add_24"
                android:drawablePadding="5dp"
                android:text="Save Field" />

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</FrameLayout>