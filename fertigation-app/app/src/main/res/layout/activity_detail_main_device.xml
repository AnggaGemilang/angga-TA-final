<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:id="@+id/collapsing_toolbar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fitsSystemWindows="true"
            app:contentScrim="?attr/colorPrimary"
            app:layout_scrollFlags="scroll|exitUntilCollapsed">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/img_thumbnail"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:background="@drawable/farmland"
                android:fitsSystemWindows="true"
                android:scaleType="centerCrop"
                app:layout_collapseMode="parallax" />

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:layout_marginTop="15dp"
                android:fitsSystemWindows="true"
                app:layout_collapseMode="pin" />

        </com.google.android.material.appbar.CollapsingToolbarLayout>

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="20dp"
            android:orientation="vertical" >

            <com.google.android.material.tabs.TabLayout
                android:id="@+id/tab_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:tabTextColor="@color/white"
                app:tabIndicatorColor="@color/white"
                app:tabBackground="@color/green_50"
                app:tabIndicatorGravity="bottom"
                app:tabIndicatorHeight="5dp"
                app:tabPaddingEnd="20dp"
                app:tabPaddingStart="20dp"
                app:tabMode="scrollable"
                app:tabTextAppearance="@android:style/TextAppearance.Widget.TabWidget"
                app:tabIndicatorFullWidth="true" />

            <FrameLayout
                android:id="@+id/frame_container"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingBottom="55dp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/black_40"
                android:layout_marginHorizontal="60dp"
                android:layout_marginTop="-30dp"
                android:backgroundTint="@color/black_40" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingHorizontal="35dp"
                android:layout_marginTop="20dp"
                android:orientation="vertical" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:layout_marginBottom="10dp"
                    android:text="Real-time Monitoring" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:orientation="horizontal" >

                    <ImageView
                        android:layout_width="65dp"
                        android:layout_height="65dp"
                        android:background="@drawable/gradient_green"
                        app:tint="@color/green_20"
                        android:padding="12dp"
                        android:src="@drawable/baseline_wb_sunny_24" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="15dp"
                        android:paddingTop="3dp"
                        android:orientation="vertical" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="18sp"
                            android:text="Weather" />

                        <TextView
                            android:id="@+id/val_weather"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="22sp"
                            android:textStyle="bold"
                            android:visibility="gone"
                            android:text="N/A" />

                        <com.facebook.shimmer.ShimmerFrameLayout
                            android:id="@+id/val_weather_placeholder"
                            android:layout_width="match_parent"
                            android:layout_marginVertical="2dp"
                            android:layout_height="25dp" >

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@color/shimmer_placeholder2" />

                        </com.facebook.shimmer.ShimmerFrameLayout>

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/pest_wrapper"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:orientation="horizontal" >

                    <ImageView
                        android:layout_width="65dp"
                        android:layout_height="65dp"
                        android:background="@drawable/gradient_green"
                        app:tint="@color/green_20"
                        android:padding="12dp"
                        android:src="@drawable/baseline_adb_24" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="15dp"
                        android:paddingTop="3dp"
                        android:orientation="vertical" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="18sp"
                            android:text="Pests" />

                        <TextView
                            android:id="@+id/val_pest"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="22sp"
                            android:textStyle="bold"
                            android:visibility="gone"
                            android:text="N/A" />

                        <com.facebook.shimmer.ShimmerFrameLayout
                            android:id="@+id/val_pests_placeholder"
                            android:layout_width="match_parent"
                            android:layout_marginVertical="2dp"
                            android:layout_height="25dp" >

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@color/shimmer_placeholder2" />

                        </com.facebook.shimmer.ShimmerFrameLayout>

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:orientation="horizontal" >

                    <ImageView
                        android:layout_width="65dp"
                        android:layout_height="65dp"
                        android:background="@drawable/gradient_green"
                        app:tint="@color/green_20"
                        android:padding="12dp"
                        android:src="@drawable/ic_baseline_local_fire_department_24" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="15dp"
                        android:paddingTop="3dp"
                        android:orientation="vertical" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="18sp"
                            android:text="Warmth" />

                        <TextView
                            android:id="@+id/val_wind_temperature"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="22sp"
                            android:textStyle="bold"
                            android:visibility="gone"
                            android:text="N/A" />

                        <com.facebook.shimmer.ShimmerFrameLayout
                            android:id="@+id/val_wind_warmth_placeholder"
                            android:layout_width="match_parent"
                            android:layout_marginVertical="2dp"
                            android:layout_height="25dp" >

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@color/shimmer_placeholder2" />

                        </com.facebook.shimmer.ShimmerFrameLayout>

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:orientation="horizontal" >

                    <ImageView
                        android:layout_width="65dp"
                        android:layout_height="65dp"
                        android:background="@drawable/gradient_green"
                        app:tint="@color/green_20"
                        android:padding="12dp"
                        android:src="@drawable/ic_baseline_contactless_24" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="15dp"
                        android:paddingTop="3dp"
                        android:orientation="vertical" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="18sp"
                            android:text="Humidity" />

                        <TextView
                            android:id="@+id/val_wind_humidity"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="22sp"
                            android:visibility="gone"
                            android:textStyle="bold"
                            android:text="N/A" />

                        <com.facebook.shimmer.ShimmerFrameLayout
                            android:id="@+id/val_wind_humidity_placeholder"
                            android:layout_width="match_parent"
                            android:layout_marginVertical="2dp"
                            android:layout_height="25dp" >

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@color/shimmer_placeholder2" />

                        </com.facebook.shimmer.ShimmerFrameLayout>

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:orientation="horizontal" >

                    <ImageView
                        android:layout_width="65dp"
                        android:layout_height="65dp"
                        android:background="@drawable/gradient_green"
                        app:tint="@color/green_20"
                        android:padding="12dp"
                        android:src="@drawable/baseline_air_24" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="15dp"
                        android:paddingTop="3dp"
                        android:orientation="vertical" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="18sp"
                            android:text="Wind Speed" />

                        <TextView
                            android:id="@+id/val_wind_speed"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="22sp"
                            android:textStyle="bold"
                            android:visibility="gone"
                            android:text="N/A" />

                        <com.facebook.shimmer.ShimmerFrameLayout
                            android:id="@+id/val_wind_speed_placeholder"
                            android:layout_width="match_parent"
                            android:layout_marginVertical="2dp"
                            android:layout_height="25dp" >

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@color/shimmer_placeholder2" />

                        </com.facebook.shimmer.ShimmerFrameLayout>

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:orientation="horizontal" >

                    <ImageView
                        android:layout_width="65dp"
                        android:layout_height="65dp"
                        android:background="@drawable/gradient_green"
                        app:tint="@color/green_20"
                        android:padding="12dp"
                        android:src="@drawable/baseline_compress_24" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="15dp"
                        android:paddingTop="3dp"
                        android:orientation="vertical" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="18sp"
                            android:text="Wind Pressure" />

                        <TextView
                            android:id="@+id/val_wind_pressure"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="22sp"
                            android:textStyle="bold"
                            android:visibility="gone"
                            android:text="N/A" />

                        <com.facebook.shimmer.ShimmerFrameLayout
                            android:id="@+id/val_wind_pressure_placeholder"
                            android:layout_width="match_parent"
                            android:layout_marginVertical="2dp"
                            android:layout_height="25dp" >

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@color/shimmer_placeholder2" />

                        </com.facebook.shimmer.ShimmerFrameLayout>

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:orientation="horizontal" >

                    <ImageView
                        android:layout_width="65dp"
                        android:layout_height="65dp"
                        android:background="@drawable/gradient_green"
                        app:tint="@color/green_20"
                        android:padding="12dp"
                        android:src="@drawable/baseline_lightbulb_24" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="15dp"
                        android:paddingTop="3dp"
                        android:orientation="vertical" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="18sp"
                            android:text="Light Intensity" />

                        <TextView
                            android:id="@+id/val_light_intensity"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="22sp"
                            android:textStyle="bold"
                            android:visibility="gone"
                            android:text="N/A" />

                        <com.facebook.shimmer.ShimmerFrameLayout
                            android:id="@+id/val_light_intensity_placeholder"
                            android:layout_width="match_parent"
                            android:layout_marginVertical="2dp"
                            android:layout_height="25dp" >

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@color/shimmer_placeholder2" />

                        </com.facebook.shimmer.ShimmerFrameLayout>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>