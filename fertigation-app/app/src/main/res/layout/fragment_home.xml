<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.fragment.HomeFragment">

    <androidx.core.widget.NestedScrollView
        android:id="@+id/scroll_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <ProgressBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:layout_gravity="center_horizontal|center_vertical"
                android:gravity="center_horizontal|center_vertical" />

            <LinearLayout
                android:id="@+id/main_content"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical" >

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="430dp"
                        android:layout_marginTop="-80dp"
                        android:layout_marginStart="-5dp"
                        android:layout_marginEnd="-5dp"
                        android:src="@drawable/header_dashboard" />

                    <!--Konten di header-->

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical" >

                        <com.google.android.material.appbar.AppBarLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:elevation="0dp"
                            android:layout_marginTop="25dp"
                            android:layout_marginHorizontal="5dp"
                            android:background="@android:color/transparent" >

                            <androidx.appcompat.widget.Toolbar
                                android:id="@+id/toolbar"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                app:elevation="0dp"
                                android:background="@android:color/transparent"
                                android:minHeight="?attr/actionBarSize">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Dashboard"
                                    android:textSize="19sp"
                                    android:textStyle="bold"
                                    android:gravity="center_vertical"
                                    android:textColor="@color/white"
                                    android:layout_marginStart="20dp" />

                            </androidx.appcompat.widget.Toolbar>

                        </com.google.android.material.appbar.AppBarLayout>

                        <TextView
                            android:id="@+id/hello"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Fertigation App"
                            android:textStyle="bold"
                            android:textColor="@color/white"
                            android:layout_marginStart="25dp"
                            android:textSize="30sp" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="25dp"
                            android:layout_marginTop="6dp"
                            android:orientation="horizontal" >

                            <TextView
                                android:id="@+id/greeting"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/white"
                                android:textFontWeight="700"
                                android:textSize="20sp"
                                android:text="Hello," />

                            <TextView
                                android:id="@+id/txt_tanggal_home"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="15dp"
                                android:background="@color/white"
                                android:backgroundTint="@color/white"
                                android:textColor="@color/black"
                                android:paddingHorizontal="10dp"
                                android:paddingTop="3dp"
                                android:paddingBottom="4dp"
                                android:textStyle="bold"
                                android:text="28 Nov" />

                        </LinearLayout>

                    </LinearLayout>

                </FrameLayout>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="-167dp"
                    app:cardUseCompatPadding="false"
                    app:cardElevation="20dp"
                    app:cardCornerRadius="10dp"
                    android:backgroundTint="#C9D1B8"
                    android:outlineSpotShadowColor="@color/black_40"
                    android:layout_marginHorizontal="28dp" >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingHorizontal="8dp"
                        android:orientation="vertical" >

                        <RelativeLayout
                            android:id="@+id/data_not_found"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:visibility="gone" >

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:paddingVertical="15dp"
                                android:layout_alignParentTop="true"
                                android:layout_alignParentEnd="true"
                                android:layout_alignParentBottom="true"
                                android:layout_alignParentStart="true">

                                <ImageView
                                    android:layout_width="70dp"
                                    android:layout_height="70dp"
                                    android:layout_gravity="center_vertical|center_horizontal"
                                    android:src="@drawable/ic_baseline_data_exploration_24"
                                    app:tint="@color/green_50" />

                                <TextView
                                    android:id="@+id/txt_notfound"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Field not found"
                                    android:layout_gravity="center_vertical|center_horizontal"
                                    android:textSize="17sp"
                                    android:textStyle="bold"
                                    android:textColor="@color/green_50" />

                            </LinearLayout>

                        </RelativeLayout>

                        <LinearLayout
                            android:id="@+id/data_found"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal" >

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="115dp"
                                android:layout_weight="0.9"
                                android:layout_gravity="center_vertical"
                                android:gravity="center_vertical"
                                android:orientation="vertical" >

                                <ImageView
                                    android:id="@+id/val_preset_img"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:padding="10dp"
                                    android:visibility="gone"
                                    android:layout_gravity="center_horizontal|center_vertical"
                                    android:src="@drawable/spinach" />

                                <com.facebook.shimmer.ShimmerFrameLayout
                                    android:id="@+id/val_preset_img_placeholder"
                                    android:layout_width="match_parent"
                                    android:layout_height="80dp"
                                    android:paddingTop="4dp"
                                    android:paddingEnd="5dp"
                                    android:paddingStart="15dp"
                                    android:paddingBottom="3dp"
                                    android:layout_gravity="center_horizontal|center_vertical">

                                    <View
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:background="@color/shimmer_placeholder2"
                                        android:layout_gravity="center_horizontal" />

                                </com.facebook.shimmer.ShimmerFrameLayout>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="0.7"
                                android:layout_marginStart="10dp"
                                android:layout_marginEnd="10dp"
                                android:layout_gravity="center_vertical"
                                android:gravity="center_vertical"
                                android:orientation="vertical" >

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Preset" />

                                <TextView
                                    android:id="@+id/val_preset_name"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="5dp"
                                    android:textStyle="bold"
                                    android:visibility="gone"
                                    android:textSize="20sp"
                                    android:text="N/A" />

                                <com.facebook.shimmer.ShimmerFrameLayout
                                    android:id="@+id/val_preset_name_placeholder"
                                    android:layout_width="65dp"
                                    android:layout_marginTop="5dp"
                                    android:layout_marginBottom="2dp"
                                    android:layout_height="25dp" >

                                    <View
                                        android:layout_width="80dp"
                                        android:layout_height="match_parent"
                                        android:background="@color/shimmer_placeholder2"
                                        android:layout_gravity="center_horizontal" />

                                </com.facebook.shimmer.ShimmerFrameLayout>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="0.8"
                                android:layout_gravity="center_vertical"
                                android:layout_marginEnd="10dp"
                                android:gravity="center_vertical"
                                android:orientation="vertical" >

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Field Loc." />

                                <TextView
                                    android:id="@+id/val_field_loc"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="5dp"
                                    android:textStyle="bold"
                                    android:textSize="20sp"
                                    android:visibility="gone"
                                    android:text="N/A" />

                                <com.facebook.shimmer.ShimmerFrameLayout
                                    android:id="@+id/val_field_loc_placeholder"
                                    android:layout_width="65dp"
                                    android:layout_marginTop="5dp"
                                    android:layout_marginBottom="2dp"
                                    android:layout_height="25dp" >

                                    <View
                                        android:layout_width="80dp"
                                        android:layout_height="match_parent"
                                        android:background="@color/shimmer_placeholder2"
                                        android:layout_gravity="center_horizontal" />

                                </com.facebook.shimmer.ShimmerFrameLayout>

                            </LinearLayout>

                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/black_40"
                            android:layout_marginHorizontal="30dp"
                            android:backgroundTint="@color/black_40" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingTop="18dp"
                            android:paddingBottom="20dp"
                            android:orientation="horizontal" >

                            <LinearLayout
                                android:id="@+id/btn_pest"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:layout_gravity="center_horizontal"
                                android:gravity="center_horizontal"
                                android:tooltipText="Watering Status"
                                android:orientation="vertical">

                                <ImageView
                                    android:layout_width="25dp"
                                    android:layout_height="25dp"
                                    android:src="@drawable/baseline_water_drop_24" />

                                <TextView
                                    android:id="@+id/val_watering_status"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="5dp"
                                    android:textSize="14sp"
                                    android:visibility="gone"
                                    android:text="N/A" />

                                <com.facebook.shimmer.ShimmerFrameLayout
                                    android:id="@+id/val_watering_placeholder"
                                    android:layout_width="30dp"
                                    android:layout_height="15dp"
                                    android:layout_marginTop="5dp"
                                    android:layout_marginBottom="2dp" >

                                    <View
                                        android:layout_width="80dp"
                                        android:layout_height="match_parent"
                                        android:background="@color/shimmer_placeholder2"
                                        android:layout_gravity="center_horizontal" />

                                </com.facebook.shimmer.ShimmerFrameLayout>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:layout_gravity="center_horizontal"
                                android:gravity="center_horizontal"
                                android:tooltipText="Fertilizing Status"
                                android:orientation="vertical" >

                                <ImageView
                                    android:layout_width="25dp"
                                    android:layout_height="25dp"
                                    android:src="@drawable/baseline_energy_savings_leaf_24" />

                                <TextView
                                    android:id="@+id/val_fertilizing_status"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="5dp"
                                    android:visibility="gone"
                                    android:textSize="14sp"
                                    android:text="N/A" />

                                <com.facebook.shimmer.ShimmerFrameLayout
                                    android:id="@+id/val_fertilizing_placeholder"
                                    android:layout_width="30dp"
                                    android:layout_height="15dp"
                                    android:layout_marginTop="5dp"
                                    android:layout_marginBottom="2dp" >

                                    <View
                                        android:layout_width="80dp"
                                        android:layout_height="match_parent"
                                        android:background="@color/shimmer_placeholder2"
                                        android:layout_gravity="center_horizontal" />

                                </com.facebook.shimmer.ShimmerFrameLayout>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:layout_gravity="center_horizontal"
                                android:gravity="center_horizontal"
                                android:tooltipText="Water Pump Status"
                                android:orientation="vertical">

                                <ImageView
                                    android:layout_width="25dp"
                                    android:layout_height="25dp"
                                    android:src="@drawable/baseline_circle_24" />

                                <TextView
                                    android:id="@+id/val_water_pump_status"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="5dp"
                                    android:visibility="gone"
                                    android:textSize="14sp"
                                    android:text="N/A" />

                                <com.facebook.shimmer.ShimmerFrameLayout
                                    android:id="@+id/val_water_pump_status_placeholder"
                                    android:layout_width="30dp"
                                    android:layout_height="15dp"
                                    android:layout_marginTop="5dp"
                                    android:layout_marginBottom="2dp" >

                                    <View
                                        android:layout_width="80dp"
                                        android:layout_height="match_parent"
                                        android:background="@color/shimmer_placeholder2"
                                        android:layout_gravity="center_horizontal" />

                                </com.facebook.shimmer.ShimmerFrameLayout>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:layout_gravity="center_horizontal"
                                android:gravity="center_horizontal"
                                android:tooltipText="Fertilizer Pump Status"
                                android:orientation="vertical">

                                <ImageView
                                    android:layout_width="25dp"
                                    android:layout_height="25dp"
                                    android:src="@drawable/baseline_group_work_24" />

                                <TextView
                                    android:id="@+id/val_fertilizer_pump_status"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:visibility="gone"
                                    android:layout_marginTop="5dp"
                                    android:textSize="14sp"
                                    android:text="N/A" />

                                <com.facebook.shimmer.ShimmerFrameLayout
                                    android:id="@+id/val_fertilizer_pump_status_placeholder"
                                    android:layout_width="30dp"
                                    android:layout_height="15dp"
                                    android:layout_marginTop="5dp"
                                    android:layout_marginBottom="2dp" >

                                    <View
                                        android:layout_width="80dp"
                                        android:layout_height="match_parent"
                                        android:background="@color/shimmer_placeholder2"
                                        android:layout_gravity="center_horizontal" />

                                </com.facebook.shimmer.ShimmerFrameLayout>

                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingTop="15dp"
                    android:orientation="vertical" >

                    <LinearLayout
                        android:id="@+id/val_filter_field_placeholder"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="7dp"
                        android:layout_marginBottom="10dp"
                        android:orientation="horizontal" >

                        <com.facebook.shimmer.ShimmerFrameLayout
                            android:layout_width="75dp"
                            android:layout_height="35dp"
                            android:layout_marginStart="27dp" >

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@color/shimmer_placeholder2"
                                android:layout_gravity="center_horizontal" />

                        </com.facebook.shimmer.ShimmerFrameLayout>

                        <com.facebook.shimmer.ShimmerFrameLayout
                            android:layout_width="75dp"
                            android:layout_height="35dp"
                            android:layout_marginStart="20dp" >

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@color/shimmer_placeholder2"
                                android:layout_gravity="center_horizontal" />

                        </com.facebook.shimmer.ShimmerFrameLayout>

                        <com.facebook.shimmer.ShimmerFrameLayout
                            android:layout_width="75dp"
                            android:layout_height="35dp"
                            android:layout_marginStart="20dp" >

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@color/shimmer_placeholder2"
                                android:layout_gravity="center_horizontal" />

                        </com.facebook.shimmer.ShimmerFrameLayout>

                        <com.facebook.shimmer.ShimmerFrameLayout
                            android:layout_width="75dp"
                            android:layout_height="35dp"
                            android:layout_marginStart="20dp" >

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@color/shimmer_placeholder2"
                                android:layout_gravity="center_horizontal" />

                        </com.facebook.shimmer.ShimmerFrameLayout>

                    </LinearLayout>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recycler_view"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="gone"
                        android:orientation="horizontal" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:paddingHorizontal="20dp"
                        android:paddingBottom="120dp"
                        android:orientation="vertical" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textStyle="bold"
                            android:textSize="22sp"
                            android:layout_marginTop="5dp"
                            android:layout_marginStart="12dp"
                            android:text="Real-time Monitoring" />

                        <TextView
                            android:id="@+id/val_data_taken"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="15sp"
                            android:visibility="gone"
                            android:layout_marginTop="2dp"
                            android:layout_marginStart="12dp"
                            android:text="Taken at N/A" />

                        <com.facebook.shimmer.ShimmerFrameLayout
                            android:id="@+id/val_taken_at_placeholder"
                            android:layout_width="match_parent"
                            android:layout_marginBottom="2dp"
                            android:layout_marginTop="2dp"
                            android:layout_marginStart="12dp"
                            android:layout_height="25dp" >

                            <View
                                android:layout_width="180dp"
                                android:layout_height="match_parent"
                                android:background="@color/shimmer_placeholder2"
                                android:layout_gravity="left" />

                        </com.facebook.shimmer.ShimmerFrameLayout>

                        <GridLayout
                            android:layout_width="fill_parent"
                            android:layout_height="match_parent"
                            android:columnCount="2"
                            android:rowCount="3"
                            android:layout_marginTop="3dp" >

                            <androidx.cardview.widget.CardView
                                android:id="@+id/no1"
                                android:layout_width="0dp"
                                android:layout_height="188dp"
                                android:layout_gravity="fill_horizontal"
                                android:layout_rowWeight="1"
                                android:layout_row="0"
                                android:layout_column="0"
                                android:layout_columnWeight="1"
                                android:clickable="true"
                                android:clipToPadding="false"
                                android:clipChildren="false"
                                app:cardBackgroundColor="@color/white"
                                app:cardUseCompatPadding="true"
                                app:cardElevation="10dp"
                                android:elevation="10dp"
                                android:outlineSpotShadowColor="@color/black_20"
                                app:cardCornerRadius="10dp"
                                android:focusable="true" >

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_marginVertical="10dp"
                                    android:orientation="vertical" >

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:textColor="@color/black"
                                        android:gravity="center"
                                        android:textSize="16sp"
                                        android:text="Water Tank" />

                                    <ImageView
                                        android:layout_width="match_parent"
                                        android:layout_height="75dp"
                                        android:layout_marginTop="6dp"
                                        android:src="@drawable/ic_baseline_contactless_24" />

                                    <TextView
                                        android:id="@+id/val_water_tank"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:gravity="center"
                                        android:textSize="18sp"
                                        android:layout_marginTop="2dp"
                                        android:visibility="gone"
                                        android:text="N/A" />

                                    <com.facebook.shimmer.ShimmerFrameLayout
                                        android:id="@+id/val_water_tank_placeholder"
                                        android:layout_width="match_parent"
                                        android:layout_marginTop="2dp"
                                        android:layout_marginBottom="2dp"
                                        android:layout_height="25dp" >

                                        <View
                                            android:layout_width="80dp"
                                            android:layout_height="match_parent"
                                            android:background="@color/shimmer_placeholder2"
                                            android:layout_gravity="center_horizontal" />

                                    </com.facebook.shimmer.ShimmerFrameLayout>

                                </LinearLayout>

                            </androidx.cardview.widget.CardView>

                            <androidx.cardview.widget.CardView
                                android:layout_width="0dp"
                                android:layout_height="188dp"
                                android:layout_row="0"
                                android:layout_column="1"
                                android:layout_columnWeight="1"
                                android:clickable="true"
                                android:layout_gravity="fill_horizontal"
                                android:layout_rowWeight="1"
                                android:foreground="?android:attr/selectableItemBackground"
                                app:cardBackgroundColor="@color/white"
                                app:cardUseCompatPadding="true"
                                android:outlineSpotShadowColor="@color/black_20"
                                app:cardElevation="10dp"
                                app:cardCornerRadius="10dp"
                                android:focusable="true" >

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_marginVertical="10dp"
                                    android:orientation="vertical" >

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:textColor="@color/black"
                                        android:gravity="center"
                                        android:textSize="16sp"
                                        android:text="Fertilizer Tank" />

                                    <ImageView
                                        android:layout_width="match_parent"
                                        android:layout_height="75dp"
                                        android:layout_marginTop="6dp"
                                        android:src="@drawable/ic_baseline_contactless_24" />

                                    <TextView
                                        android:id="@+id/val_fertilizer_tank"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:gravity="center"
                                        android:visibility="gone"
                                        android:layout_marginTop="2dp"
                                        android:textSize="18sp"
                                        android:text="N/A" />

                                    <com.facebook.shimmer.ShimmerFrameLayout
                                        android:id="@+id/val_fertilizer_tank_placeholder"
                                        android:layout_width="match_parent"
                                        android:layout_marginTop="2dp"
                                        android:layout_marginBottom="2dp"
                                        android:layout_height="25dp" >

                                        <View
                                            android:layout_width="80dp"
                                            android:layout_height="match_parent"
                                            android:background="@color/shimmer_placeholder2"
                                            android:layout_gravity="center_horizontal" />

                                    </com.facebook.shimmer.ShimmerFrameLayout>

                                </LinearLayout>

                            </androidx.cardview.widget.CardView>

                            <androidx.cardview.widget.CardView
                                android:layout_width="0dp"
                                android:layout_height="188dp"
                                android:layout_row="1"
                                android:layout_column="0"
                                android:layout_columnWeight="1"
                                android:layout_gravity="fill_horizontal"
                                android:layout_rowWeight="1"
                                android:clickable="true"
                                android:layout_marginTop="-10dp"
                                android:foreground="?android:attr/selectableItemBackground"
                                app:cardBackgroundColor="@color/white"
                                app:cardUseCompatPadding="true"
                                app:cardElevation="10dp"
                                android:outlineSpotShadowColor="@color/black_20"
                                app:cardCornerRadius="10dp"
                                android:focusable="true"  >

                                <LinearLayout
