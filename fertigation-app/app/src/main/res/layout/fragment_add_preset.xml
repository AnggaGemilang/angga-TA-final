<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/design_bottom_sheet"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="22dp"
            android:orientation="vertical" >

            <androidx.cardview.widget.CardView
                android:layout_width="70dp"
                android:layout_height="5dp"
                android:layout_marginTop="20dp"
                android:layout_gravity="center"
                app:cardElevation="0dp"
                app:cardBackgroundColor="@color/green_75"
                app:cardCornerRadius="50dp" />

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="5dp"
                android:text="Add Preset"
                android:textSize="25sp"
                android:layout_gravity="center"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/title_plant_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Preset Name"
                android:textStyle="bold"
                android:layout_marginTop="15dp"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/preset_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:textSize="16sp"
                android:background="@drawable/edittext_style"
                android:hint="Enter Preset Name" />

            <TextView
                android:id="@+id/title_default_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Default Image"
                android:textStyle="bold"
                android:layout_marginTop="15dp"
                android:textSize="14sp" />

            <androidx.cardview.widget.CardView
                android:id="@+id/default_image"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                app:cardElevation="0dp"
                app:cardCornerRadius="8dp"
                android:backgroundTint="#32C4C4C4">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/open"
                        android:layout_width="wrap_content"
                        android:layout_height="35dp"
                        android:layout_marginVertical="15dp"
                        android:layout_marginStart="15dp"
                        android:paddingHorizontal="20dp"
                        android:paddingTop="3dp"
                        android:textColor="@color/black"
                        android:background="@color/grey_20"
                        android:text="Choose File"  />

                    <TextView
                        android:id="@+id/txt_filename"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="10dp"
                        android:text="Choose Image" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ideal Moisture (%)"
                android:textStyle="bold"
                android:layout_marginTop="15dp"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/ideal_moisture"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:inputType="phone"
                android:textSize="16sp"
                android:background="@drawable/edittext_style"
                android:hint="Enter Moisture" />

            <LinearLayout
                android:id="@+id/configuration_item_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginEnd="3dp"
                        android:orientation="vertical" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Irrigation Interval"
                            android:textStyle="bold"
                            android:layout_marginTop="15dp"
                            android:textSize="14sp" />

                        <EditText
                            android:id="@+id/irrigation_days"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="7dp"
                            android:inputType="phone"
                            android:textSize="16sp"
                            android:background="@drawable/edittext_style"
                            android:hint="Days . ." />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="3dp"
                        android:orientation="vertical" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Irrigation Times"
                            android:textStyle="bold"
                            android:layout_marginTop="15dp"
                            android:textSize="14sp" />

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" >

                            <EditText
                                android:id="@+id/irrigation_times"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="7dp"
                                android:textSize="16sp"
                                android:enabled="false"
                                android:inputType="phone"
                                android:background="@drawable/edittext_style"
                                android:hint="Times . ." />

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent" >

                                <ImageView
                                    android:id="@+id/irrigation_time_picker"
                                    android:layout_width="20dp"
                                    android:layout_height="20dp"
                                    android:paddingTop="7dp"
                                    android:layout_marginEnd="15dp"
                                    android:layout_alignParentRight="true"
                                    android:layout_alignParentTop="true"
                                    android:layout_alignParentBottom="true"
                                    android:src="@drawable/baseline_access_time_filled_24" />

                            </RelativeLayout>

                        </FrameLayout>

                    </LinearLayout>

                    <RelativeLayout
                        android:layout_width="30dp"
                        android:layout_height="88dp"
                        android:layout_marginStart="6dp">

                        <ImageView
                            android:id="@+id/add_itimes_input"
                            android:layout_width="match_parent"
                            android:layout_height="47dp"
                            android:padding="3dp"
                            android:background="@color/green_50"
                            android:layout_alignParentBottom="true"
                            android:src="@drawable/ic_baseline_add_24" />

                    </RelativeLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/irrigation_times_list"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <LinearLayout
                    android:id="@+id/configuration_item_3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginEnd="3dp"
                        android:orientation="vertical" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Fertigation Interval"
                            android:textStyle="bold"
                            android:layout_marginTop="15dp"
                            android:textSize="14sp" />

                        <EditText
                            android:id="@+id/fertigation_days"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="7dp"
                            android:textSize="16sp"
                            android:inputType="phone"
                            android:background="@drawable/edittext_style"
                            android:hint="Days . ." />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="3dp"
                        android:orientation="vertical" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Fertigation Times"
                            android:textStyle="bold"
                            android:layout_marginTop="15dp"
                            android:textSize="14sp" />

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" >

                            <EditText
                                android:id="@+id/fertigation_times"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="7dp"
                                android:textSize="16sp"
                                android:enabled="false"
                                android:inputType="phone"
                                android:background="@drawable/edittext_style"
                                android:hint="Times . ." />

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent" >

                                <ImageView
                                    android:id="@+id/fertigation_time_picker"
                                    android:layout_width="20dp"
                                    android:layout_height="20dp"
                                    android:paddingTop="7dp"
                                    android:layout_marginEnd="15dp"
                                    android:layout_alignParentRight="true"
                                    android:layout_alignParentTop="true"
                                    android:layout_alignParentBottom="true"
                                    android:src="@drawable/baseline_access_time_filled_24" />

                            </RelativeLayout>

                        </FrameLayout>

                    </LinearLayout>

                    <RelativeLayout
                        android:layout_width="30dp"
                        android:layout_height="88dp"
                        android:layout_marginStart="6dp">

                        <ImageView
                            android:id="@+id/add_ftimes_input"
                            android:layout_width="match_parent"
                            android:layout_height="47dp"
                            android:padding="3dp"
                            android:background="@color/green_50"
                            android:layout_alignParentBottom="true"
                            android:src="@drawable/ic_baseline_add_24" />

                    </RelativeLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/fertigation_times_list"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/configuration_item_4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginEnd="3dp"
                        android:orientation="vertical" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Plant Age (HST)"
                            android:textStyle="bold"
                            android:layout_marginTop="15dp"
                            android:textSize="14sp" />

                        <EditText
                            android:id="@+id/plant_age_irrigation"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="7dp"
                            android:textSize="16sp"
                            android:inputType="phone"
                            android:background="@drawable/edittext_style"
                            android:hint="Age . ." />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="3dp"
                        android:orientation="vertical" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Irrigation Dose"
                            android:textStyle="bold"
                            android:layout_marginTop="15dp"
                            android:textSize="14sp" />

                        <EditText
                            android:id="@+id/irrigation_dose"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="7dp"
                            android:textSize="16sp"
                            android:inputType="phone"
                            android:background="@drawable/edittext_style"
                            android:hint="Dose . ." />

                    </LinearLayout>

                    <RelativeLayout
                        android:layout_width="30dp"
                        android:layout_height="88dp"
                        android:layout_marginStart="6dp">

                        <ImageView
                            android:id="@+id/add_idose_input"
                            android:layout_width="match_parent"
                            android:layout_height="47dp"
                            android:padding="3dp"
                            android:background="@color/green_50"
                            android:layout_alignParentBottom="true"
                            android:src="@drawable/ic_baseline_add_24" />

                    </RelativeLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/irrigation_doses_list"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <LinearLayout
                    android:id="@+id/configuration_item_5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginEnd="3dp"
                        android:orientation="vertical" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Plant Age (HST)"
                            android:textStyle="bold"
                            android:layout_marginTop="15dp"
                            android:textSize="14sp" />

                        <EditText
                            android:id="@+id/plant_age_fertigation"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="7dp"
                            android:textSize="16sp"
                            android:inputType="phone"
                            android:background="@drawable/edittext_style"
                            android:hint="Age . ." />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="3dp"
                        android:orientation="vertical" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Fertigation Dose"
                            android:textStyle="bold"
                            android:layout_marginTop="15dp"
                            android:textSize="14sp" />

                        <EditText
                            android:id="@+id/fertigation_dose"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="7dp"
                            android:textSize="16sp"
                            android:inputType="phone"
                            android:background="@drawable/edittext_style"
                            android:hint="Dose . ." />

                    </LinearLayout>

                    <RelativeLayout
                        android:layout_width="30dp"
                        android:layout_height="88dp"
                        android:layout_marginStart="6dp" >

                        <ImageView
                            android:id="@+id/add_fdose_input"
                            android:layout_width="match_parent"
                            android:layout_height="47dp"
                            android:padding="3dp"
                            android:background="@color/green_50"
                            android:layout_alignParentBottom="true"
                            android:src="@drawable/ic_baseline_add_24" />

                    </RelativeLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/fertigation_doses_list"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" />

            </LinearLayout>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_submit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="22dp"
                android:paddingHorizontal="75dp"
                android:layout_marginBottom="25dp"
                android:textColor="@color/white"
                android:background="@drawable/button_submit"
                android:drawableLeft="@drawable/ic_baseline_library_add_24"
                android:drawablePadding="5dp"
                android:text="Save Preset" />

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</FrameLayout>