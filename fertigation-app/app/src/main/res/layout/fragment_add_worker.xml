<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/design_bottom_sheet"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="22dp"
            android:orientation="vertical" >

            <androidx.cardview.widget.CardView
                android:layout_width="70dp"
                android:layout_height="5dp"
                android:layout_marginTop="20dp"
                android:layout_gravity="center"
                app:cardElevation="0dp"
                app:cardBackgroundColor="@color/green_75"
                app:cardCornerRadius="50dp" />

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="5dp"
                android:text="Add Worker"
                android:textSize="25sp"
                android:layout_gravity="center"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/title_worker_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Worker Name"
                android:textStyle="bold"
                android:layout_marginTop="20dp"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/worker_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:textSize="16sp"
                android:background="@drawable/edittext_style"
                android:hint="Enter Worker Name" />

            <TextView
                android:id="@+id/title_worker_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Worker Email"
                android:textStyle="bold"
                android:layout_marginTop="15dp"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/worker_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:textSize="16sp"
                android:inputType="textEmailAddress"
                android:background="@drawable/edittext_style"
                android:hint="Enter Worker Email" />

            <TextView
                android:id="@+id/title_worker_password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Worker Password"
                android:textStyle="bold"
                android:layout_marginTop="15dp"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/worker_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:textSize="16sp"
                android:background="@drawable/edittext_style"
                android:hint="Enter Worker Password" />

            <TextView
                android:id="@+id/txt_password_error"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textColor="@color/red_50"
                android:visibility="gone"
                android:text="Min, 8 character, number, letter, and symbol" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Choose Field"
                android:textStyle="bold"
                android:layout_marginTop="10dp"
                android:textSize="14sp" />

            <Spinner
                android:id="@+id/field_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                app:popupTheme="@style/Spinner.Custom"
                android:background="@drawable/spinner_style" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_submit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="22dp"
                android:paddingHorizontal="75dp"
                android:layout_marginBottom="25dp"
                android:textColor="@color/white"
                android:background="@drawable/button_submit"
                android:drawableLeft="@drawable/ic_baseline_library_add_24"
                android:drawablePadding="5dp"
                android:text="Save Worker" />

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</FrameLayout>