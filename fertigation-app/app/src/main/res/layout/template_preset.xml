<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="20dp"
    android:orientation="horizontal"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="130dp"
        android:layout_height="match_parent"
        android:layout_marginEnd="10dp"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/thumbnail"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/rounded_all_20"
            android:backgroundTint="@color/main_color"
            android:padding="5dp"
            android:src="@drawable/spinach" />

    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageButton
                android:id="@+id/option_menu"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:layout_marginEnd="5dp"
                android:layout_marginTop="5dp"
                android:background="@android:color/transparent"
                android:src="@drawable/ic_baseline_more_vert_24"
                app:tint="@color/green_75" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Spinach"
                android:textStyle="bold"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/tv_nutrition"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nutrition : "
                android:layout_marginTop="3dp"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tv_ph"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ph : "
                android:layout_marginTop="3dp"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tv_growth_lamp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Growth Lamp :"
                android:layout_marginTop="3dp"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tv_gas_valve"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CO2 Value : "
                android:layout_marginTop="3dp"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tv_temperature"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Temperature : "
                android:layout_marginTop="3dp"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tv_pump"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pump :"
                android:layout_marginTop="3dp"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tv_seedling_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Seedling Time :"
                android:layout_marginTop="3dp"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tv_grow_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Grow Time :"
                android:layout_marginTop="3dp"
                android:textSize="15sp" />

        </LinearLayout>

    </FrameLayout>

</LinearLayout>