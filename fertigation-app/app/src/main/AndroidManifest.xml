<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.agrapana.fertigation">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Irosysco"
        android:usesCleartextTraffic="true"
        android:hardwareAccelerated="true"
        tools:targetApi="31">

        <activity
            android:name="com.agrapana.fertigation.ui.activity.DetailSupportDeviceActivity"
            android:exported="false"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.Arnesys.Detail" />

        <activity
            android:name="com.agrapana.fertigation.ui.activity.DetailMainDeviceActivity"
            android:exported="false"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.Arnesys.Detail" />

        <activity
            android:name="com.agrapana.fertigation.ui.activity.LoginActivity"
            android:exported="true"
            android:noHistory="true"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.Arnesys.LoginScreen" />

        <activity
            android:name="com.agrapana.fertigation.ui.activity.SettingActivity"
            android:exported="true"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.Arnesys.Setting" />

        <activity
            android:name="com.agrapana.fertigation.ui.activity.OnboardingActivity"
            android:exported="true"
            android:noHistory="true"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.Arnesys.OnboardingScreen" />

        <activity
            android:name="com.agrapana.fertigation.ui.activity.SplashScreenActivity"
            android:exported="true"
            android:noHistory="true"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.Arnesys.SplashScreen" >

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

        </activity>

        <activity
            android:name="com.agrapana.fertigation.ui.activity.MainActivity"
            android:exported="true"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.Arnesys.Main" />

    </application>

</manifest>