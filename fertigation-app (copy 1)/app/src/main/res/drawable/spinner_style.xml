<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <layer-list>
            <item>
                <shape
                    android:shape="rectangle">
                    <solid android:color="#32C4C4C4"/>
                    <corners android:radius="8dp"/>
                    <padding
                        android:right="15dp"
                        android:left="15dp"
                        android:top="12dp"
                        android:bottom="12dp" />
                </shape>
            </item>
            <item>
                <bitmap android:gravity="center|end" android:src="@drawable/ic_caret_down" />
            </item>
        </layer-list>
    </item>
</selector>